FROM bitnami/spark:3.5.1

# Switch to root for package installation
USER root

# Install helpful utilities
RUN apt-get update && \
    apt-get install -y curl wget && \
    rm -rf /var/lib/apt/lists/*

# Set working directory for Spark apps
WORKDIR /opt/spark-apps

# Download Kafka and AWS connectors
RUN wget -O /opt/bitnami/spark/jars/spark-sql-kafka-0-10_2.12-3.5.1.jar \
      https://repo1.maven.org/maven2/org/apache/spark/spark-sql-kafka-0-10_2.12/3.5.1/spark-sql-kafka-0-10_2.12-3.5.1.jar && \
    wget -O /opt/bitnami/spark/jars/kafka-clients-3.5.1.jar \
      https://repo1.maven.org/maven2/org/apache/kafka/kafka-clients/3.5.1/kafka-clients-3.5.1.jar && \
    wget -O /opt/bitnami/spark/jars/spark-token-provider-kafka-0-10_2.12-3.5.1.jar \
      https://repo1.maven.org/maven2/org/apache/spark/spark-token-provider-kafka-0-10_2.12/3.5.1/spark-token-provider-kafka-0-10_2.12-3.5.1.jar && \
    wget -O /opt/bitnami/spark/jars/commons-pool2-2.11.1.jar \
      https://repo1.maven.org/maven2/org/apache/commons/commons-pool2/2.11.1/commons-pool2-2.11.1.jar && \
    wget -O /opt/bitnami/spark/jars/hadoop-aws-3.3.4.jar \
      https://repo1.maven.org/maven2/org/apache/hadoop/hadoop-aws/3.3.4/hadoop-aws-3.3.4.jar && \
    wget -O /opt/bitnami/spark/jars/aws-java-sdk-bundle-1.12.376.jar \
      https://repo1.maven.org/maven2/com/amazonaws/aws-java-sdk-bundle/1.12.376/aws-java-sdk-bundle-1.12.376.jar

# Copy the assembled JAR into the container
COPY target/scala-2.12/data-pipeline-scala-assembly-0.1.0-SNAPSHOT.jar \
     /opt/spark-apps/data-pipeline-scala-assembly-0.1.0-SNAPSHOT.jar

# Copy the entrypoint script
COPY docker-entrypoint.sh /opt/spark-apps/docker-entrypoint.sh
RUN chmod +x /opt/spark-apps/docker-entrypoint.sh

# Expose Spark UI port
EXPOSE 4040

# Default entrypoint
ENTRYPOINT ["/opt/spark-apps/docker-entrypoint.sh"]